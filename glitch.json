{
  "install": "npm install",
  "start": "node server.js",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^package-lock\\.json$"
      ]
    },
    "restart": {
      "exclude": [
        "^public/",
        "^dist/"
      ],
      "include": [
        "\\.js$",
        "\\.json"
      ]
    },
    "throttle": 1000
  }
}
